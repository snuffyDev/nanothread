{
	"compilerOptions": {
		"target": "ES2022",
		"useDefineForClassFields": true,
		"module": "ES2022",
		"lib": [
			"ESNext",
			"WebWorker",
			"DOM",
			"ES2022.Array",
			"es2022"
		],
		"moduleResolution": "Node",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"baseUrl": "src",
		"noEmit": true,
		"allowJs": true,
		"rootDir": ".",
		"declaration": true,
		"declarationDir": "dist",
		"esModuleInterop": true,
		"downlevelIteration": true,
		"importsNotUsedAsValues": "error",
		"preserveValueImports": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"strictFunctionTypes": false,
		"skipLibCheck": true,
		"paths": {
			"models": [
				"src/models"
			],
			"models/*": [
				"src/models/*"
			],
			"sync": [
				"src/sync"
			],
			"sync/*": [
				"src/sync/*"
			],
			"threads": [
				"src/threads"
			],
			"threads/*": [
				"src/threads/*"
			],
			"internals": [
				"src/internals"
			],
			"internals/*": [
				"src/internals/*"
			],
		},
		"types": [
			"node"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/internals/NodeWorker.ts",
	],
	"exclude": [
		"node_modules/**/*",
		"src/internals/NodeWorker-esm.mjs",
		"src/internals/NodeWorker-cjs.js",
		"dist/*",
		"./index.ts"
	]
}
