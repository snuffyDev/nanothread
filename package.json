{
	"name": "nanothreads",
	"author": "snuffydev",
	"repository": {
		"url": "https://github.com/snuffyDev/nanothreads"
	},
	"license": "ISC",
	"version": "0.3.0",
	"source": "./src/index.ts",
	"description": "A tiny threading library, made for browsers and Node.",
	"keywords": [
		"threads",
		"worker",
		"concurrency",
		"async",
		"thread pool",
		"worker-pool",
		"workers",
		"pool",
		"threadpool",
		"thread",
		"multithreading",
		"parallel",
		"threading",
		"browser"
	],
	"files": [
		"dist",
		"package.json"
	],
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.ts",
	"module": "./dist/index.mjs",
	"browser": "./dist/index.web.js",
	"scripts": {
		"build": "node ./build.mjs && pnpm run build:dts",
		"build:benchmark": "node ./build.mjs && pnpm run build:dts && cp -R ./dist ./browser-test/src/lib",
		"build:demo": "tsc --moduleResolution node --target ESNext -m  esnext ./index.ts",
		"build:dts": "tsc --moduleResolution node --target ESNext -m esnext --declaration true --emitDeclarationOnly --rootDir ./src/ --outDir dist && cp ./dist/index.d.ts ./dist/index.web.d.ts",
		"export": "node ./scripts/barrel.mjs",
		"run:esm:node-demo": "node --loader=ts-node/esm --experimental-specifier-resolution=node ./index.mts",
		"run:cjs:node-demo": "node ./index.cjs.js",
		"start": "pnpm run build && pnpm run run:esm:node-demo",
		"format": "prettier --write .",
		"test": "size-limit"
	},
	"exports": {
		".": {
			"browser": {
				"browser": "./dist/index.web.mjs",
				"types": "./dist/index.web.d.ts"
			},
			"import": {
				"browser": "./dist/index.web.mjs",
				"node": "./dist/index.mjs"
			},
			"require": "./dist/index.cjs",
			"node": {
				"import": "./dist/index.mjs",
				"require": "./dist/index.cjs",
				"types": "./dist/index.d.ts"
			},
			"module": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		},
		"./package.json": "./package.json"
	},
	"size-limit": [
		{
			"name": "Node (ESM)",
			"limit": "2.5 KB",
			"import": "*",
			"path": "dist/index.mjs"
		},
		{
			"name": "Node (CJS)",
			"limit": "2.5 KB",
			"import": "*",
			"path": "dist/index.cjs"
		},
		{
			"name": "Web (ESM)",
			"limit": "2.5 KB",
			"import": "*",
			"path": "dist/index.web.mjs"
		}
	],
	"devDependencies": {
		"@size-limit/file": "^8.2.4",
		"@size-limit/preset-small-lib": "^8.2.4",
		"@types/node": "^18.8.3",
		"esbuild": "^0.16.13",
		"esbuild-wasm": "^0.16.16",
		"prettier": "^2.8.0",
		"size-limit": "^8.2.4",
		"size-limit-node-esbuild": "^0.2.0",
		"ts-node": "^10.9.1",
		"tsup": "^6.5.0",
		"typedoc": "^0.23.24",
		"typescript": "^4.9.3"
	}
}
